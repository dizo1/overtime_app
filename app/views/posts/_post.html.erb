<tr>
    
    <td><%= post.id %></td>
      <td><%= post.overtime_request%></td>
    <td><%= post.date %></td>
      <td><%= status_label post.status %></td>
    <td><%= post.user.full_name %></td>
      <td><%= link_to truncate(post.rationale), post %></td>
    <td>
		  <%= link_to 'Edit', edit_post_path(post), id: "edit_#{post.id}", class: 'glyphicon glyphicon-pencil index-icons' if policy(post).update? %>
    </td>
	  <td>
		  <%= link_to 'Delete', post_path(post), method: :delete, id: "delete_post_#{post.id}_from_index",class: 'glyphicon glyphicon-trash',data: { confirm: 'Are you sure?' } if policy(post).destroy? %>
	  </td>
</tr>
